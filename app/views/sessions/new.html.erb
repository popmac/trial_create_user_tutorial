<h1>ログイン</h1>

<div>
  <%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span>ログイン状態を保存する</span>
  <% end %>

  <%= f.submit "ログインする" %>
  <% end %>
</div>

<div>
  <%= link_to "パスワードを忘れた方はこちら", new_password_reset_path %>
</div>
